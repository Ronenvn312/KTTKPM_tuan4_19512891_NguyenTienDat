package com.example.se.jpamysqltuan4.entity;

import java.util.Collection;
import java.util.List;
import java.util.Set;

import javax.persistence.CascadeType;
import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.Id;
import javax.persistence.OneToMany;
import javax.persistence.Table;

import lombok.Data;
import lombok.EqualsAndHashCode;
import lombok.ToString;

@Entity
@Table(name = "nhanvien")
@Data
public class NhanVien {

	@Id
	@Column(name = "MaNV")
	private String maNV;
	@Column(name = "TenNV")
	private String tenNV;
	@Column(name = "Luong")
	private int Luong;

	@OneToMany(mappedBy = "maybay", cascade = CascadeType.ALL) // Quan hệ 1-n với đối tượng ở dưới (Person) (1 địa điểm
	// có nhiều người ở)
// MapopedBy trỏ tới tên biến Address ở trong Person.
	@EqualsAndHashCode.Exclude // không sử dụng trường này trong equals và hashcode
	@ToString.Exclude // Khoonhg sử dụng trong toString()
	private Collection<ChungNhan> chungNhans;

	public Collection<ChungNhan> getChungNhan() {
		return chungNhans;
	}

	public void setChungNhan(List<ChungNhan> chungNhans) {
		this.chungNhans = chungNhans;
	}

	public String getMaNV() {
		return maNV;
	}

	public void setMaNV(String maNV) {
		this.maNV = maNV;
	}

	public String getTenNV() {
		return tenNV;
	}

	public void setTenNV(String tenNV) {
		this.tenNV = tenNV;
	}

	public int getLuong() {
		return Luong;
	}

	public void setLuong(int luong) {
		Luong = luong;
	}

	public NhanVien(String maNV, String tenNV, int luong) {
		super();
		this.maNV = maNV;
		this.tenNV = tenNV;
		Luong = luong;
	}

	public NhanVien() {
		super();
		// TODO Auto-generated constructor stub
	}

	@Override
	public String toString() {
		return "NhanVien [maNV=" + maNV + ", tenNV=" + tenNV + ", Luong=" + Luong + "]";
	}

}
