import javax.persistence.Table;

import lombok.Data;
import lombok.EqualsAndHashCode;
import lombok.ToString;

@Entity
@Table(name = "nhanvien")
@Data
public class NhanVien implements Serializable{

	/**
	 * 
	 */
	private static final long serialVersionUID = -8099380333739474942L;
	@Id
	@Column(name = "MaNV")
	private String maNV;
	@Column(name = "Ten")
	private String tenNV;
	@Column(name = "Luong")
	private int luong;

//	@OneToMany(mappedBy = "nhanvien", cascade = CascadeType.ALL) // Quan hệ 1-n với đối tượng ở dưới (Person) (1 địa điểm
//	// có nhiều người ở)
//// MapopedBy trỏ tới tên biến Address ở trong Person.
